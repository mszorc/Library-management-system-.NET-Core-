    ViewData["Title"] = "Autorzy";
}

<h1>Usuń</h1>

<h3>Jesteś pewny, że chcesz to usunąć?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.imie)
        </dd>
        <dt class = "col-sm-2">
