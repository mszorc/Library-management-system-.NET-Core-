@model SBDlibrary.Models.Autor
@{
    ViewData["Title"] = "Autorzy";
}

<h1>Edytuj</h1>
<hr />
<br />
<h4>Autor</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edytuj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_autor" />
            <br />
            <div class="form-group">
                <label asp-for="imie" class=""></label>
                <input asp-for="imie" class="form-control">
                <span asp-validation-for="imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nazwisko" class=""></label>
                <input asp-for="nazwisko" class="form-control">
                <span asp-validation-for="nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

