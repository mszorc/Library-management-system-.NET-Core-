@model SBDlibrary.Models.Zamowienia

@{
    ViewData["Title"] = "Zamówienia";
}


<form asp-action="Stworz">
    <h2 class="form-heading">Dodaj</h2>
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="id_dostawcy" class="control-label"></label>
            <select asp-for="id_dostawcy" class="form-control" asp-items="ViewBag.id_dostawcy"></select>
        </div>
        <div class="form-group">
            <label asp-for="data_zamowienia" class="control-label"></label>
            <select asp-for="data_zamowienia" class="form-control" asp-items="ViewBag.data_zamowienia"></select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="status_zamowienia" class="control-label"/>          
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Powrót</a>
</div>