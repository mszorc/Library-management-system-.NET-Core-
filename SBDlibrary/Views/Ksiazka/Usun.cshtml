@model SBDlibrary.ViewModels.BookViewModels.KsiazkaViewModel
@{
    ViewData["Title"] = "Usun";
}

<h1>Usuń</h1>

<h3>Jesteś pewny, że chcesz to usunąć?</h3>
<div>
    <h4>Ksiązka</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tytuł)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tytuł)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.autorzy)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.autorzyLista)
            {
                <li>@item</li>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.kategorie)
        </dt>
        <dd class="col-sm-10">
            @foreach (string item in Model.kategorieLista)
            {
                <li>@item</li>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_ksiazki)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_ksiazki)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.data_wydania)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data_wydania)
        </dd>

        <dt class="col-sm-2">
            Wydawnictwo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wydawnictwa.nazwa)
        </dd>
    </dl>

    <form asp-action="Usun">
        <input type="hidden" asp-for="id_ksiazki" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
