<link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
<style>
    h1 {
        font-family: 'Lato', monospace;
    }
</style>
@model IEnumerable<SBDlibrary.Models.Ksiazki>

@{
    ViewData["Title"] = "Ksiazki";
}

<h1>Książki</h1>

<div>
    <a asp-action="Create">Dodaj</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Miniatura
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tytuł)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_wydania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wydawnictwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="https://via.placeholder.com/150"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tytuł)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_wydania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wydawnictwa.nazwa)
                <td>
                    @Html.ActionLink("Szczegóły", "Details", "Book", new { id = item.id_ksiazki })
                </td>
            </tr>
        }
    </tbody>
</table>