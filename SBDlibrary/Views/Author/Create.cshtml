@model SBDlibrary.Models.Autor
@{
    ViewData["Title"] = "Autorzy";
}

<form class="form" method="post" novalidate>
    <h2 class="form-heading">Dodaj</h2>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="imie"></label>
            <input asp-for="imie" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="nazwisko"></label>
            <input asp-for="nazwisko" class="form-control" />
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Dodaj</button>
    </div>
</form>