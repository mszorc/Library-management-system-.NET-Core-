@model SBDlibrary.ViewModels.ZwrotyViewModels.KsiazkaTytulViewModel

@{
    ViewData["Title"] = "Zwrot";
}

<h4>Zwróć książkę</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_wypozyczenia" class="control-label"></label>
                <select asp-for="id_wypozyczenia" class ="form-control" asp-items="ViewBag.id_wypozyczenia"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Zwróć książkę" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ZwrotyKlienta">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
