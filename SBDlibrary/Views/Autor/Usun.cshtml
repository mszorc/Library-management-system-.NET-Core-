<div>
    
    <hr />
    <d1 class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.imie)
        </dd>
