@model SBDlibrary.Models.Kategorie
@{
    ViewData["Title"] = "Usun";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć tą kategorię?</h3>
<div>

    <hr />
    <d1 class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_kategorii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_kategorii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nazwa)
        </dd>
        
    </d1>
    <br />
    <form asp-action="Usun">
        <input type="hidden" asp-for="id_kategorii" />
        <input type="submit" value="Usun" class="btn btn-outline-danger" />
        <a asp-action="Index">Powrót na listę</a>
    </form>
</div>
