<link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
<style>
    h1 {
        font-family: 'Lato', monospace;
    }
</style>
@model IEnumerable<SBDlibrary.Models.Kategorie>

@{
    ViewData["Title"] = "Kategorie";
}


<h1>Kategorie</h1>

<div>
    <a asp-action="Stworz">Dodaj</a>
</div>
<form asp-action="Index">
    <p>
        Nazwa: <input type="text" name="nazwa">
        <input type="submit" value="Filtruj" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nazwa)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edytuj", new { id=item.id_kategorii })
                    @Html.ActionLink("Usuń", "Usun", new { id=item.id_kategorii })
                </td>
            </tr>
        }
    </tbody>
</table>