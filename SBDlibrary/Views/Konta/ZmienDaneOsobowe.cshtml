@model SBDlibrary.ViewModel.InputModelChangePersonalData
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Zmień dane osobowe";
}

<partial name="_StatusMessage" for="StatusMessage" />

<form class="form" method="post" novalidate>
    <h2 class="form-heading">Zmień dane osobowe</h2>
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zapisz zmiany</button>
    </div>
</form>

<p>
    <a asp-action="ZnajdzUzytkownika">Powrót</a>
</p>