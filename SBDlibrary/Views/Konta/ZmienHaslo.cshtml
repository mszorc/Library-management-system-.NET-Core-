@model SBDlibrary.ViewModel.InputModelChangePassword

@{
    ViewData["Title"] = "Zmień hasło";
}

<partial name="_StatusMessage" for="StatusMessage" />

<form class="form" method="post" novalidate>
    <h2 class="form-heading">Zmień hasło</h2>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zapisz zmiany</button>
    </div>
</form>

<div>
    <a asp-action="Zarzadzaj">Powrót</a>
</div>
