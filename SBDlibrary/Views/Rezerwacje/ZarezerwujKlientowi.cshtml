@model SBDlibrary.Models.Rezerwacje
@{
    ViewData["Title"] = "ZarezerwujKlientowi";
}

<h1>Rezerwacja książki klientowi</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Detale">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.id_egzemplarza" class="control-label"></label>
                <select asp-for="@Model.id_egzemplarza" class="form-control" asp-items="ViewBag.id_egzemplarza"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.id_uzytkownika" class="control-label"></label>
                <select asp-for="@Model.id_uzytkownika" class="form-control" asp-items="ViewBag.id_uzytkownika"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="data_rezerwacji" class="control-label" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="data_odbioru" class="control-label" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="status_rezerwacji" class="control-label" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Zarezerwuj" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
